<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:keepScreenOn="false"
    tools:context="com.example.adrian.com.blueair.HomeActivity">

    <!-- The primary full-screen view. This can be replaced with whatever view
         is needed to present your content, e.g. VideoView, SurfaceView,
         TextureView, etc. -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/splash"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/fullscreen_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:keepScreenOn="true"
        android:text="@string/homeMainText"
        android:textColor="#33b5e5"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginBottom="0dp">

            <Button
                style="@style/homeActivityButtonStyle"
                android:id="@+id/home_user_button"
                android:text="@string/userText"
                android:drawableTop="@drawable/user"
                android:background="@color/lightOrange" />

            <Button
                style="@style/homeActivityButtonStyle"
                android:text="@string/flightText"
                android:id="@+id/home_flight_button"
                android:drawableTop="@drawable/airplane"
                android:background="@color/lightBlue"/>
            <Button
                style="@style/homeActivityButtonStyle"
                android:id="@+id/home_checkin_button"
                android:text="@string/checkinText"
                android:drawableTop="@drawable/home_page_checkin"
                android:background="@color/darkBrown" />


            <Button
                style="@style/homeActivityButtonStyle"
                android:text="\nInchirieri auto"
                android:id="@+id/button4"
                android:drawableTop="@drawable/llave"
                android:background="@color/darkBrown"/>

            <Button
                style="@style/homeActivityButtonStyle"
                android:text="@string/hotelText"
                android:id="@+id/button5"
                android:drawableTop="@drawable/hotel"
                android:background="@color/lightOrange"/>
            <Button
                style="@style/homeActivityButtonStyle"
                android:id="@+id/button6"
                android:text="\ncheckin"
                android:drawableTop="@drawable/home_page_checkin"
                android:background="@color/lightBlue"/>
        </LinearLayout>
</LinearLayout>


