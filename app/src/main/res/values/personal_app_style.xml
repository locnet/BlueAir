<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- text cu marimea 20sp -->
    <style name="LightBlue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    <style name="regularFont">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>
    <style name="regularFont.medium">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="regularFont.priceDetails">
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/blue</item>
    </style>
    <!-- stil imagini -->
    <style name="resultIcons">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- layout header listView rezultate -->
    <style name="ListViewTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:padding">5dp</item>
    </style>

    <!-- imagine header listView rezultate -->
    <style name="resultIcons.ListViewIcon">
       <item name="android:layout_marginLeft">0dp</item>
       <item name="android:background">@drawable/redline</item>
    </style>

    <!-- text listView rezultate -->
    <style name="ListViewTitleText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/lightBlue</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- layout de la listView orizontal -->
    <style name="HorizontalListViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">90dp</item>
    </style>

    <!-- text pret -->
    <style name="priceTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/lightOrange</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_margin">0dp</item>
    </style>
    <style name="priceTextStyle.tax">
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:textColor">@color/brown</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- butoane servicii -->
    <style name="servicesImageButonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@color/lightOrange</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:layout_marginRight">5dp</item>
    </style>
    <!-- pretul serviciului -->
    <style name="servicesImageButonStyle.text">
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">2dp</item>
        <item name="android:text">@string/zero_price</item>
    </style>
    <!-- butoane home_activity -->
    <style name="homeActivityButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>