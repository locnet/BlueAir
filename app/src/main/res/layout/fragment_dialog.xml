<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/servicesDialogFragment"
    tools:context="com.example.adrian.com.blueair.ServicesDialogFragment">
    <!-- TITLU DIALOG FRAGMENT -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:padding="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/lightOrange"
                android:textSize="18dp"
                android:layout_marginTop="0dp"
                android:id="@+id/dialogTitle"
                android:gravity="center" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/serviceDescription"
                android:textSize="14dp"
                android:textColor="@color/black"
                android:layout_margin="5dp"
                android:layout_marginTop="10dp"
                android:lineSpacingExtra="3dp"
                android:gravity="center" />
        </LinearLayout> <!-- FIN LAYER TITLU -->

        <!-- LAYER RUTA SI SPINNER SERVICII -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/departure_spinner_dialog_layer">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/departureCityDetails"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/departureSpinner">
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/return_spinner_dialog_layer">
                <TextView
                    android:layout_width="match_parent"
                    android:paddingLeft="10dp"
                    android:paddingRight="5dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:id="@+id/returnCityDetails"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/returnSpinner">
                </Spinner>
            </LinearLayout>
        </LinearLayout> <!-- FIN LAYER RUTA SI SPINNER SERVICII -->

        <!-- LAYER PRET SERVICII SELECTIONATE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/dialogPriceTextView"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:background="@color/lightOrange"
                android:textSize="24dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_margin="5dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
